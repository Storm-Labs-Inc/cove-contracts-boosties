{
  "name": "smart-contracts-core",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf cache out",
    "build": "forge-deploy gen-deployer && forge build --sizes",
    "test": "forge test --ffi -vvv --gas-report",
    "coverage": "forge coverage --ffi --report lcov",
    "slither": "forge clean && forge build --skip test script --build-info && slither . --ignore-compile",
    "deployLocal": "DEPLOYMENT_CONTEXT=1-fork forge script script/Deployments.s.sol --rpc-url http://localhost:8545 --broadcast --private-key ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 -vvv && forge-deploy sync;",
    "lint": "pnpm run lint:sol && pnpm run prettier:check",
    "lint:fix": "pnpm lint:sol:fix && pnpm run prettier:write",
    "lint:sol": "forge fmt --check && npx solhint \"{script,src,test}/**/*.sol\"",
    "lint:sol:fix": "forge fmt && npx solhint --fix \"{script,src,test}/**/*.sol\"",
    "prettier:check": "npx prettier --check \"**/*.{json,md,yml,yaml}\"",
    "prettier:write": "npx prettier --write \"**/*.{json,md,yml,yaml}\""
  },
  "lint-staged": {
    "*.sol": [
      "forge fmt",
      "npx solhint --fix"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/node": "^20.4.2",
    "forge-deploy": "^0.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "solhint": "^3.4.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3"
  },
  "peerDependencies": {
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3"
  }
}

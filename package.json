{
  "name": "smart-contracts-core",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install && pnpm run forge-deploy:build",
    "clean": "rm -rf cache out && forge clean",
    "build": "./forge-deploy gen-deployer && forge build --build-info",
    "test": "forge test -vvv --gas-report",
    "invariant-test": "pnpm run build && echidna ./ --config ./echidna.config.yaml --contract BaseRewardsGauge_EchidnaTest",
    "coverage": "forge coverage --report lcov",
    "slither": "forge clean && forge build --skip test script --build-info && slither . --ignore-compile",
    "fork:mainnet": "./bash/start-anvil-fork.sh",
    "deploy:local": "pnpm run build && ./bash/deploy-to-local.sh",
    "deploy:prod": "pnpm run build && ./bash/deploy-to-prod.sh",
    "forge-deploy:clean": "rm -rf deployments/1-fork/*",
    "forge-deploy:build": "cd lib/forge-deploy && cargo build --release && cp target/release/forge-deploy ../../forge-deploy",
    "lint": "pnpm run lint:sol && pnpm run prettier:check",
    "lint:fix": "pnpm lint:sol:fix && pnpm run prettier:write",
    "lint:sol": "forge fmt --check && npx solhint \"{script,src}/**/*.sol\" --ignore-path .solhintignore && npx solhint \"{test}/**/*.sol\" --config .solhint.test.json --ignore-path .solhintignore",
    "lint:sol:fix": "forge fmt && npx solhint --fix --noPrompt \"{script,src}/**/*.sol\" --ignore-path .solhintignore && npx solhint --fix --noPrompt \"{test}/**/*.sol\" --config .solhint.test.json --ignore-path .solhintignore",
    "prettier:check": "npx prettier --check \"**/*.{json,md,yml,yaml}\"",
    "prettier:write": "npx prettier --write \"**/*.{json,md,yml,yaml}\""
  },
  "lint-staged": {
    "{script,src}/!(deps/**/*|interfaces/deps/**/*)/**/*.sol": [
      "forge fmt",
      "npx solhint --fix --noPrompt --config .solhint.json --ignore-path .solhintignore"
    ],
    "test/**/*.sol": [
      "forge fmt",
      "npx solhint --fix --noPrompt --config .solhint.test.json --ignore-path .solhintignore"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.14",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "solhint": "^4.1.1"
  }
}
